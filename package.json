{
  "name": "fake-sierra",
  "version": "1.0.0",
  "repository": "git@github.com:wellcomecollection/fake-sierra.git",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production ts-node --transpile-only index.ts",
    "dev": "NODE_ENV=development nodemon index.ts",
    "test": "jest",
    "generate-types": "json2ts --cwd ./src/schemas -i './src/schemas/*.json' -o ./src/generated-types/",
    "prepare": "husky install && yarn generate-types"
  },
  "dependencies": {
    "fastify": "^3.23.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "husky": ">=6",
    "jest": "^27.3.1",
    "json-schema-to-typescript": "^10.1.5",
    "lint-staged": ">=10",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
